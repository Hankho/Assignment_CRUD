<% if @book.errors.any? %>
      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
<% end %>


<%= form_for @book , :url => book_path ,:method =>:patch  do |f|%>
<%= render :partial => "form" , :locals => { :f => f } %>
	<br>
	<%= f.submit "完成編輯", :class => "btn btn-primary"%>
<%end%>