<%= form_for @book , :url => book_path ,:method =>:patch  do |f|%>


<div class="form-group">
<%= f.label " 書名" %>
<%= f.text_field :name, :class=> "form-control" %>
</div>

<div class="form-group">
<%= f.label "書本簡介" %>
<%= f.text_area :description, :class=> "form-control"%>
</div>
<br>
<%= f.submit "完成編輯", :class => "btn btn-primary"%>



<%end%>